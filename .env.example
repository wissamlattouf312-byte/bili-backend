# BILI Master System - Environment Configuration
# Replace all 'X' placeholders with actual credentials

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bili_db

# Google Maps API (optional; deprecated seed scripts only)
GOOGLE_MAPS_API_KEY=X

# Frontend: Maps JavaScript API key (map display). Copy to frontend/.env as REACT_APP_GOOGLE_MAPS_API_KEY for CRA.
# Restrict this key to Maps JavaScript API + HTTP referrers in Google Cloud Console.
# REACT_APP_GOOGLE_MAPS_API_KEY=your_maps_js_api_key

# Bybit Wallet Integration
BYBIT_API_KEY=X
BYBIT_API_SECRET=X
BYBIT_WALLET_ADDRESS=X
BYBIT_TESTNET=false

# WhatsApp Gateway
WHATSAPP_API_KEY=X
WHATSAPP_API_URL=X

# SMS Service (for Admin alerts)
SMS_API_KEY=X
SMS_API_URL=X
ADMIN_PHONE_NUMBER=03520580

# Firebase (for real-time features - optional)
FIREBASE_PROJECT_ID=X
FIREBASE_PRIVATE_KEY=X
FIREBASE_CLIENT_EMAIL=X

# JWT Secret
JWT_SECRET_KEY=X
JWT_ALGORITHM=HS256

# App Configuration
APP_ENV=development
APP_DEBUG=true
BETA_MODE=true

# File Storage
UPLOAD_DIR=uploads
MAX_VIDEO_SIZE_MB=100
MAX_VIDEO_DURATION_SECONDS=60
MAX_VIDEO_RESOLUTION=1080p

# Credit System
INITIAL_CLAIM_CREDITS=20
REFERRAL_REWARD_CREDITS=5
AD_POST_COST_CREDITS=0.5
MIN_CREDIT_PURCHASE_USD=5

# Royal Hospitality Period (days)
ROYAL_HOSPITALITY_DAYS=30

# Auto-Sweep Configuration
AUTO_SWEEP_THRESHOLD_USD=50.0

# Notification Radius (KM)
DEFAULT_NOTIFICATION_RADIUS_KM=15

# Post Expiration (hours)
COMMERCIAL_POST_EXPIRATION_HOURS=48
NOTIFICATION_COOLDOWN_HOURS=12

# Chat Retention (days)
CHAT_RETENTION_DAYS=30

# Socket Grace Period (seconds)
SOCKET_GRACE_PERIOD_SECONDS=60

# CORS (production): comma-separated list of frontend origins, e.g. https://your-app.netlify.app
# CORS_ORIGINS=https://your-app.netlify.app,https://bili.example.com
